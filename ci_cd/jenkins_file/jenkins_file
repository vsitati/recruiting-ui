pipeline {
   agent {
        node {
            label 'RecruitingQA'
        }
    }

   stages {
      stage('Create Python Virtual Env and install libraries') {
         steps {
          bat """
              C:\\python\\python.exe -m venv .env
              source ./.env/bin/activate
              python -m pip install -r requirements.txt
          """
         }
      }
   }
}
