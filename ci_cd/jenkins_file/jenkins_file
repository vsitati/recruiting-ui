pipeline {
   agent {
        node {
            label 'RecruitingQA'
        }
    }

   stages {
      stage('Create Python Virtual Env and install libraries') {
         steps {
          bat """
              python -m venv .env
              .\\.env\\Scripts\\activate.bat && python -m pip install -r requirements.txt
          """
         }
      }
      stage('Run tests') {
         steps {
          bat """
              pytest
          """
         }
      }
   }
}

